@model StoreFront.DATA.EF.Models.Pokemon

@{
    ViewData["Title"] = Model.PokemonName + " Details";
}

<h1>@ViewData["Title"]</h1>

<div>
    @*<h4>Pokemon</h4>*@
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PokemonName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PokemonName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PokemonPrice)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PokemonPrice)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PokemonDescription)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PokemonDescription)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.InStock)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.InStock)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IsDiscontinued)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IsDiscontinued)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PokemonImage)
        </dt>
        <dd class = "col-sm-10">
            @*@Html.DisplayFor(model => model.PokemonImage)*@
            <img src="~/img/pokemon-img/@Model.PokemonImage" class="img-fluid" alt="@Model.PokemonDescription" />
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PokeBallId)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PokeBallId)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.City)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.City.CityName)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.PokemonId">Modify</a> |
    <a asp-action="Index">Back to Pokemon</a>
</div>
