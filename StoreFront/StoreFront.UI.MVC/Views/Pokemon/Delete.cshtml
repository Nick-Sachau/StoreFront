@model StoreFront.DATA.EF.Models.Pokemon

@{
    ViewData["Title"] = "Delete " + Model.PokemonName;
}

<h1>@ViewData["Title"]</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    @*<h4>Pokemon</h4>*@
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PokemonName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PokemonName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PokemonPrice)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PokemonPrice)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PokemonDescription)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PokemonDescription)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.InStock)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.InStock)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IsDiscontinued)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IsDiscontinued)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PokemonImage)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PokemonImage)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PokemonBall)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PokemonBall)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.City)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.City.CityName)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="PokemonId" />
        <input type="submit" value="Delete forever" class="btn btn-danger" /> |
        <a asp-action="Index">Back to Pokemon</a>
    </form>
</div>
