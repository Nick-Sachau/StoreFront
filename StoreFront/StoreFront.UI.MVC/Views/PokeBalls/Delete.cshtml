@model StoreFront.DATA.EF.Models.PokeBall

@{
    ViewData["Title"] = "Delete " + Model.PokeballName;
}

<h1>@ViewData["Title"]</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    @*<h4>PokeBall</h4>*@
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PokeballName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PokeballName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Image)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Image)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="PokeballId" />
        <input type="submit" value="Delete forever" class="btn btn-danger" /> |
        <a asp-action="Index">Back to Pokeballs</a>
    </form>
</div>
