@model StoreFront.DATA.EF.Models.PokeBall

@{
    ViewData["Title"] = "Edit " + Model.PokeballName;
}

<h1>@ViewData["Title"]</h1>

@*<h4>PokeBall</h4>*@
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PokeballId" />
            <input type="hidden" asp-for="Image" />
            <div class="form-group">
                <label asp-for="PokeballName" class="control-label"></label>
                <input asp-for="PokeballName" class="form-control" />
                <span asp-validation-for="PokeballName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Image" class="control-label"></label>
                @*<input asp-for="Image" class="form-control" />*@
                <input type="file" asp-for="BallImage" />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to Pokeballs</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
