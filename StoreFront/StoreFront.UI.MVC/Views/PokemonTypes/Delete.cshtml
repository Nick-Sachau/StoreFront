@model StoreFront.DATA.EF.Models.PokemonType

@{
    ViewData["Title"] = "Delete " + Model.Pokemon.PokemonName + "'s " + Model.Type.TypeName + " type";
}

<h1>@ViewData["Title"]</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    @*<h4>PokemonType</h4>*@
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Pokemon)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Pokemon.PokemonName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Type)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Type.TypeName)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="PokemonTypeId" />
        <input type="submit" value="Delete forever" class="btn btn-danger" /> |
        <a asp-action="Index">Back to Pokemon Types</a>
    </form>
</div>
