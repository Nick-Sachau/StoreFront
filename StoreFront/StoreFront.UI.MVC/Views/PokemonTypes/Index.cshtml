@model IEnumerable<StoreFront.DATA.EF.Models.PokemonType>

@{
    ViewData["Title"] = "Pokemon Types";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create">Create New Pokemon Type</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Pokemon)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Type)
            </th>
            <th>
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Pokemon.PokemonName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type.TypeName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.PokemonTypeId">Modify</a> |
                <a asp-action="Details" asp-route-id="@item.PokemonTypeId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.PokemonTypeId">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>
