@model IEnumerable<StoreFront.DATA.EF.Models.OrderPokemon>

@{
    ViewData["Title"] = "Pokemon Orders";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create">Create New Order</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Order)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pokemon)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Order.ShipCity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pokemon.PokemonName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.OrderPokemonId">Modify</a> |
                <a asp-action="Details" asp-route-id="@item.OrderPokemonId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.OrderPokemonId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
